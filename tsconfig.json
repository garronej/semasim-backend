{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [ "es2017" ],
        "declaration": true,
        "outDir": "./dist",
        "strictNullChecks": true,
        "sourceMap": false,
        "newLine": "LF",
        "downlevelIteration": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "incremental": true
    },
    "include": [
        "src/**/*"
    ]
}
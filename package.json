{
  "name": "semasim-backend",
  "description": "Central semasim server",
  "version": "0.6.1",
  "scripts": {
    "postinstall_": "npm run fetch-web-assets && npm run install-frontend",
    "fetch-web-assets": "cd res/theme-static/ && git clone https://a30f7432b117d8320cc21cc03513817c3f08d4b6:x-oauth-basic@github.com/garronej/web-assets.git assets",
    "install-frontend": "npm run install-api && npm run install-login-page && npm run install-manager-page",
    "install-api": "cd ./frontend/api && npm install",
    "install-login-page": "cd ./frontend/login-page && npm install",
    "install-manager-page": "cd ./frontend/manager-page && npm install",
    "tsc": "node ./node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "tsc-w": "node ./node_modules/typescript/bin/tsc -w -p ./tsconfig.json",
    "start": "sudo systemctl stop semasim-backend && sudo DEBUG=_* node ./node_modules/nodemon/bin/nodemon ./dist/lib/main.js",
    "test": "node ./dist/test/db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garronej/semasim-backend.git"
  },
  "author": "Joseph Garrone",
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [],
  "dependencies": {
    "body-parser": "^1.17.2",
    "chan-dongle-extended-client": "git+https://a30f7432b117d8320cc21cc03513817c3f08d4b6:x-oauth-basic@github.com/garronej/chan-dongle-extended-client.git",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.8",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "express-session": "^1.15.5",
    "firebase-admin": "^5.1.0",
    "forcedomain": "^0.8.1",
    "html-entities": "^1.2.1",
    "md5": "^2.2.1",
    "morgan": "^1.8.2",
    "mysql": "^2.13.0",
    "network": "github:garronej/network",
    "rejection-tracker": "github:garronej/rejection-tracker",
    "ripemd160": "^2.0.1",
    "run-exclusive": "garronej/run-exclusive",
    "serve-favicon": "^2.4.5",
    "stun": "^1.0.2",
    "ts-events-extended": "garronej/ts-events-extended"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/colors": "^1.1.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.29",
    "@types/ejs": "^2.3.33",
    "@types/express": "^4.0.36",
    "@types/express-session": "^1.15.3",
    "@types/html-entities": "^1.2.16",
    "@types/morgan": "^1.7.32",
    "@types/mysql": "0.0.32",
    "@types/node": "^6.0.0",
    "nodemon": "^1.11.0",
    "typescript": "^2.4.1"
  }
}

{
  "name": "semasim-backend",
  "description": "Semasim backend server",
  "version": "0.7.0",
  "scripts": {
    "postinstall_": "npm run fetch-web-assets && npm run install-frontend",
    "fetch-web-assets": "cd ./frontend && git clone https://a30f7432b117d8320cc21cc03513817c3f08d4b6:x-oauth-basic@github.com/garronej/web-assets.git static",
    "install-frontend": "npm run install-api && npm run install-tools && npm run install-login-page && npm run install-register-page  && npm run install-manager-page",
    "install-api": "cd ./frontend/api && npm install",
    "install-tools": "cd ./frontend/api && npm install",
    "install-login-page": "cd ./frontend/pages/login && npm install && npm run browserify",
    "install-register-page": "cd ./frontend/pages/register && npm install && npm run browserify",
    "install-manager-page": "cd ./frontend/pages/manager && npm install && npm run browserify",
    "tsc": "node ./node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "tsc-w": "node ./node_modules/typescript/bin/tsc -w -p ./tsconfig.json",
    "start": "sudo systemctl stop semasim-backend && sudo DEBUG=_* node ./node_modules/nodemon/bin/nodemon ./dist/lib/main.js",
    "test": "node ./dist/test/db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garronej/semasim-backend.git"
  },
  "author": "Joseph Garrone",
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [],
  "dependencies": {
    "apn": "^2.1.5",
    "chan-dongle-extended-client": "git+https://a30f7432b117d8320cc21cc03513817c3f08d4b6:x-oauth-basic@github.com/garronej/chan-dongle-extended-client.git",
    "colors": "^1.1.2",
    "commander": "^2.11.0",
    "debug": "^2.6.8",
    "express": "^4.15.3",
    "express-session": "^1.15.5",
    "firebase-admin": "^5.1.0",
    "forcedomain": "^0.8.1",
    "html-entities": "^1.2.1",
    "morgan": "^1.8.2",
    "network": "^0.4.0",
    "rejection-tracker": "github:garronej/rejection-tracker",
    "ripemd160": "^2.0.1",
    "serve-favicon": "^2.4.5",
    "stun": "^1.0.2",
    "ts-events-extended": "garronej/ts-events-extended"
  },
  "devDependencies": {
    "@types/apn": "^2.1.2",
    "@types/colors": "^1.1.3",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.36",
    "@types/express-session": "^1.15.3",
    "@types/html-entities": "^1.2.16",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.0",
    "nodemon": "^1.11.0",
    "typescript": "^2.4.1"
  }
}
